
@{
    ViewBag.Title = "UserLogin";
}
@Styles.Render("~/Content/login.css")

<form class="form-signin text-center">
    
    <h1 class="h1 mb-3 font-weight-bold"><a href="#">Infinity Books</a></h1>
    <h5 class="h5 mb-3 font-weight-normal">Please sign in</h5>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="inputEmail" class="form-control" placeholder="Email address" name="email" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" class="form-control" placeholder="Password" name="password" required>
    <div class="checkbox mb-3">
        <label>
            <input type="checkbox" value="remember-me"> Remember me
        </label>
    </div>
    <input type="submit" name="btn" value="Login" class="btn btn-lg btn-primary btn-block">
    <hr class="my-4">
    <a href="/UserProfile/UserRegister">New User? Register Now</a>
    <button class="btn btn-lg btn-google btn-block text-uppercase" onclick="window.location.href = '/Login/UserGoogleLogin';" type="submit"><i class="fab fa-google mr-2"></i> Sign in with Google</button>
    <button class="btn btn-lg btn-facebook btn-block text-uppercase"  onclick="window.location.href = '/Login/UserFacebookLogin';" type="submit"><i class="fab fa-facebook mr-2"></i> Sign in with Facebook</button>
    <button class="btn btn-lg btn-microsoft btn-block text-uppercase" onclick="window.location.href = '/Login/UserMicrosoftLogin';" type="submit"><i class="fab fa-microsoft mr-2"></i> Sign in with Microsoft</button>
</form>